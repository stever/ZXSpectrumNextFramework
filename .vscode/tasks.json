{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build ZX Spectrum Next",
      "type": "shell",
      "command": "sjasmplus",
      "args": [
        "--syntax=s",
        "--lst=code/framework.lst",
        "--sld=code/framework.sld",
        "--fullpath",
        "code/framework.asm"
      ],
      "problemMatcher": {
        "owner": "sjasmplus",
        "fileLocation": "autoDetect",
        "pattern": {
          "regexp": "^(.*)\\((\\d+)\\):\\s+(warning|error):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "severity": 3,
          "message": 4
        }
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
